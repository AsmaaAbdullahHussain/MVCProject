<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Vyrlo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/main/variables.css">
    <link rel="stylesheet" href="/css/main/reset.css">
    <link rel="stylesheet" href="/css/main/utilities.css">
    <link rel="stylesheet" href="/css/main/animations.css">
    <link rel="stylesheet" href="/css/main/style.css">
    <link rel="stylesheet" href="/css/components/header.css">
    <link rel="stylesheet" href="/css/components/footer.css">
    <link rel="stylesheet" href="/css/pages/auth.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        .text-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 6px 10px;
            border-radius: 5px;
            margin-top: 6px;
            font-size: 0.875rem;
            display: block;
        }

            .text-danger:empty {
                display: none;
            }

        .div-text-danger {
            color: red;
            font-size: 0.9rem;
            margin-top: 4px;
        }

        .page-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #f4f4f4;
            padding: 1rem;
            height: 100vh;
        }

        .main-content {
            flex: 1;
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
      
            @await Html.PartialAsync("_Header")
        

        <div class="content-wrapper">
            @if (ViewData["ShowSidebar"] as bool? == true)
            {
                <aside class="sidebar">
                    @await Html.PartialAsync("_Sidebar") 
                </aside>
            }

            <main class="main-content vr-main">
                @RenderBody()
            </main>
        </div>

        <footer class="vr-auth__footer">
            @await Html.PartialAsync("_Footer")
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
