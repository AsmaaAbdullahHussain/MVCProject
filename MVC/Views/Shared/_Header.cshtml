<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet" />

    <style>
        .vr-header__welcome {
            color: #28a745;
            font-weight: 600;
            font-size: 1rem;
            font-family: 'Poppins', sans-serif;
            margin-left: 1rem;
        }

    </style>
</head>

<header class="vr-header">
    <div class="vr-header__container">
        <!-- Logo Section -->
        <a href="/pages/home.html" class="vr-header__logo-link">
            <img src="/images/logo/logo.png" alt="Vyrlo" class="vr-header__logo">
        </a>

        <!-- Mobile Menu Trigger -->
        <button class="vr-header__menu-trigger" id="menuTrigger" aria-label="Toggle menu">
            <span class="vr-header__menu-icon"></span>
        </button>
        <!-- Main Navigation -->

        <nav class="vr-header__nav" id="mainNav">
            <a href="/HomePage/Index" class="vr-header__link" data-page="home">Home</a>
            <a href="/pages/listings.html" class="vr-header__link" data-page="listings">Listings</a>
            <a href="/pages/about.html" class="vr-header__link" data-page="about">About</a>
            <a href="/pages/contact.html" class="vr-header__link" data-page="contact">Contact</a>
        </nav>

        @if(User.Identity.IsAuthenticated)
        {
          
            <div class="vr-header__welcome text-success fw-semibold ms-3">
                Welcome, @User.Identity.Name!
            </div>
            <a href="/Account/Logout" class="vr-btn vr-btn--outline">
                <span>Logout</span>
                <i class="fas fa-sign-in-alt"></i>

            </a>
        }
        else{
            <div class="vr-header__guest" id="guestView">
                <a href="/Account/Login" class="vr-btn vr-btn--outline">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Login</span>
                </a>
                <a href="/Account/Register" class="vr-btn vr-btn--primary">
                    <i class="fas fa-user-plus"></i>
                    <span>Register</span>
                </a>
            </div>
        }
     @*    @if(User.IsInRole("admin")){ *@
     @*        <a href="/role/index.html" class="vr-header__link" data-page="addrole">Addrole</a> *@

     @* //   } *@
  

        <!-- Auth Section -->
        <div class="vr-header__auth">
            <!-- Guest View -->
       

            <!-- Authenticated View -->
            <div class="vr-header__user" id="userView" style="display: none;">
                <!-- User Menu -->
                <div class="vr-header__user-menu">
                    <button class="vr-header__user-trigger" id="profileTrigger" aria-expanded="false">
                        <div class="vr-avatar vr-avatar--md">
                            <img src="/images/defaults/default-avatar.png"
                                 alt="Profile"
                                 class="vr-avatar__image"
                                 id="headerAvatar"
                                 onerror="this.src='/images/defaults/default-avatar.png'">
                        </div>
                        <span class="vr-header__user-name" id="profileName">Hello, User</span>
                        <i class="fas fa-chevron-down vr-header__profile-arrow"></i>
                    </button>

                    <div class="vr-header__dropdown" id="profileDropdown">
                        <div class="vr-dropdown__content">
                            <div class="vr-dropdown__user-info">
                                <div class="vr-avatar vr-avatar--lg">
                                    <img src="/images/defaults/default-avatar.png"
                                         alt="Profile"
                                         id="dropdownAvatar"
                                         onerror="this.src='/images/defaults/default-avatar.png'">
                                </div>
                                <div class="vr-dropdown__user-details">
                                    <h4 id="dropdownName">User Name</h4>
                                    <p id="dropdownEmail">user@example.com</p>
                                </div>
                            </div>
                            <hr class="vr-dropdown__divider">
                            <a href="/pages/profile.html" class="vr-dropdown__item">
                                <i class="fas fa-user"></i>
                                <span>My Profile</span>
                            </a>
                            <a href="/pages/profile.html?section=addListing#addListing" class="vr-dropdown__item">
                                <i class="fas fa-plus"></i>
                                <span>Add Listing</span>
                            </a>
                            <a href="/pages/profile.html?section=listings#listings" class="vr-dropdown__item">
                                <i class="fas fa-list"></i>
                                <span>My Listings</span>
                            </a>
                            <hr class="vr-dropdown__divider">
                            <button class="vr-dropdown__item vr-dropdown__item--danger" id="logoutBtn">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Logout</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Toast Container -->
<div class="vr-toast-container" id="toastContainer"></div>
